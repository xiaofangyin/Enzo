<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <com.enzo.commonlib.widget.headerview.HeadWidget
        android:id="@+id/header_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_widget">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:foreground="?selectableItemBackground"
                android:scaleType="centerCrop"
                android:src="@mipmap/lighter_pic_1" />

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:foreground="?selectableItemBackground"
                android:scaleType="centerCrop"
                android:src="@mipmap/lighter_pic_2" />

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:foreground="?selectableItemBackground"
                android:scaleType="centerCrop"
                android:src="@mipmap/lighter_pic_3" />

            <ImageView
                android:id="@+id/iv4"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:foreground="?selectableItemBackground"
                android:scaleType="centerCrop"
                android:src="@mipmap/lighter_pic_4" />

            <ImageView
                android:id="@+id/iv5"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:foreground="?selectableItemBackground"
                android:scaleType="centerCrop"
                android:src="@mipmap/lighter_pic_5" />

            <ImageView
                android:id="@+id/iv6"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:foreground="?selectableItemBackground"
                android:scaleType="centerCrop"
                android:src="@mipmap/lighter_pic_6" />

            <ImageView
                android:id="@+id/iv7"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:foreground="?selectableItemBackground"
                android:scaleType="centerCrop"
                android:src="@mipmap/lighter_pic_7" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>