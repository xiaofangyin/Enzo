<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--splash 点击快速显示欢迎页面-->
    <style name="main_WelLauncher" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/main_splash_bg</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="main_AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowEnableSplitTouch">false</item><!--禁止多点触控-->
        <item name="android:splitMotionEvents">false</item><!--禁止多点触控-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
        <!-- 部分手机部分界面，headview下面有阴影，假设这个去掉阴影 -->
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>