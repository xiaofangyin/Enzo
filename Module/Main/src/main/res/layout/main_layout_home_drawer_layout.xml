<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:layout_width="292dp"
    android:layout_height="match_parent"
    android:background="@drawable/main_shape_left_menu_bg"
    android:clickable="true"
    android:fillViewport="true"
    android:focusable="true"
    android:orientation="vertical"
    skin:enable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="70dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.enzo.commonlib.widget.roundimageview.RoundImageView
            android:id="@+id/left_menu_user_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@mipmap/icon_skull_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/left_menu_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="吴彦祖"
                android:textColor="@color/color_dark_black"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawablePadding="4dp"
                android:text="超级会员"
                android:textColor="@color/color_dark_black"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="30dp"
        android:background="@color/color_dark_black_80" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/left_menu_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="@color/color_dark_black_80" />

    <TextView
        android:id="@+id/left_menu_tv_setting"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:drawableStart="@mipmap/icon_left_menu_setting"
        android:drawablePadding="8dp"
        android:drawableTint="@color/color_dark_black"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="36dp"
        android:text="切换模式"
        android:textColor="@drawable/lib_selector_text_color_333" />
</LinearLayout>
