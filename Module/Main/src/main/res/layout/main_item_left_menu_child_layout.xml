<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/left_menu_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_function_qiye_chaxun_white"
            android:tint="@color/color_dark_black"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/left_menu_linear_child_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:src="@mipmap/icon_function_qiye_chaxun_white"
            android:tint="@color/color_dark_black" />

        <TextView
            android:id="@+id/left_menu_child_linear_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@drawable/lib_selector_text_color_333"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="34dp"
            android:src="@mipmap/icon_left_menu_arrow_right"
            android:tint="@color/color_dark_black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/left_menu_grid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/left_menu_grid_child_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_function_qiye_chaxun_white"
            android:tint="@color/color_dark_black" />

        <TextView
            android:id="@+id/left_menu_child_grid_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:textColor="@drawable/lib_selector_text_color_333"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>